<%= form_for(@secret_code, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @secret_code.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@secret_code.errors.count, "error") %> prohibited this secret_code from being saved:</h4>

      <ul>
      <% @secret_code.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% if @secret_code.new_record?%>
      <div class="form-group">
        <%= f.label :bulk_generate, 'Number of Secret Code',class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.select :bulk_generate, [1,10,20,50,100], { include_blank: false }, class: "form-control" %>
        </div>
      </div>
    <% else %>
      <%= f.label :code, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :code, class: "form-control" %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
